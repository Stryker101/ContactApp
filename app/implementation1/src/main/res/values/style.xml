<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="myTxtStyle2">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat600</item>
        <item name="android:textStyle">bold</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="myTxtStyle3" parent="myTxtStyle2">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="myTxtStyle.contact_name">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/hubali_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/profile_name</item>
    </style>

    <style name="myTxtStyle.phone_number">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/montserrat600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/profile_name</item>
    </style>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="loginButton" parent="viewParent">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/hubali_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myCardView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="cardElevation">5dp</item>
    </style>
    <style name="myLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>